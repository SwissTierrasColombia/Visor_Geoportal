<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Geoportal</display-name>
    <servlet>
        <servlet-name>SuggestServlet</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.SuggestServlet</servlet-class>
    </servlet>
    <!--servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping-->
    <!--
  Alternatively, all JSP-pages of the webapp would need to have the following at the top of them 
  <%@page pageEncoding="UTF-8" contentType="text/html; charset=UTF-8"%>
   -->
    <servlet-mapping>
        <servlet-name>SuggestServlet</servlet-name>
        <url-pattern>/SuggestServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <!-- Listeners -->
    <listener>
        <listener-class>it.gesp.geoportal.listeners.AppStartListener</listener-class>
    </listener>
    <!-- Filters -->
    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>it.gesp.geoportal.filters.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <!-- Servlets -->
    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.Admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redlining</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.RedliningServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>comments</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>alerts</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.AlertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SITMunicipalAlerts</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.SITMunicipalAlertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>roles</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.RoleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>users</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>systemConfig</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.SystemConfigServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mapConfig</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.MapConfigServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>layerConfig</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.LayerConfigServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>generalData</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.GeneralDataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>downloadservlet</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.DownloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pdfservlet</servlet-name>
        <servlet-class>it.gesp.geoportal.servlets.PdfServlet</servlet-class>
    </servlet>
    <!-- Servlet mappings -->
    <!--servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet-->
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
