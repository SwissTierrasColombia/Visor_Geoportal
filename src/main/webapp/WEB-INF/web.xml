        <servlet-name>mapConfig</servlet-name>
        <url-pattern>/mapConfig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>layerConfig</servlet-name>
        <url-pattern>/layerConfig</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>generalData</servlet-name>
        <url-pattern>/generalData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>downloadservlet</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pdfservlet</servlet-name>
        <url-pattern>/pdfservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <!-- Filter mappings -->
    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <resource-ref>
        <description>This is a MySQL database connection</description>
        <res-ref-name>jdbc/GEOPORTAL_POSTGIS_DS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
